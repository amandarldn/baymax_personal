<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:macro name="inertial_body" params="mass length radius *origin">
        <inertial>
            <xacro:insert_block name="origin"/>
            <mass value="${mass}"/>
            <inertia ixx="1" ixy="1" ixz="1" iyy="1" iyz="1" izz="1"/>
        </inertial>
    </xacro:macro>
</robot>